<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
	xmlns="http://sitewhere.io/schema/sitewhere/microservice/inbound-processing"
	xmlns:sw="http://sitewhere.io/schema/sitewhere/microservice/common"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://sitewhere.io/schema/sitewhere/microservice/inbound-processing"
	elementFormDefault="qualified" attributeFormDefault="unqualified">

	<xsd:import namespace="http://sitewhere.io/schema/sitewhere/microservice/common"
		schemaLocation="http://sitewhere.io/schema/sitewhere/microservice/common/current/microservice-common.xsd" />

	<xsd:element name="inbound-processing" type="inboundProcessingType">
		<xsd:annotation>
			<xsd:documentation>
				Provides configuration information for the
				SiteWhere inbound processing microservice.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

	<!-- Contains information about inbound processing -->
	<xsd:complexType name="inboundProcessingType">
		<xsd:sequence>
		</xsd:sequence>
		<xsd:attribute name="processingThreadCount" type="sw:substitutableInt"
			use="required">
			<xsd:annotation>
				<xsd:documentation>
					Number of threads dedicated to parallel
					processing of inbound decoded events.
				</xsd:documentation>
			</xsd:annotation>
		</xsd:attribute>
	</xsd:complexType>
</xsd:schema>