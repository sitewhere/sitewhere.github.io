<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
	xmlns="http://sitewhere.io/schema/sitewhere/microservice/instance-management"
	xmlns:ds="http://sitewhere.io/schema/sitewhere/microservice/common/datastore"
	xmlns:cn="http://sitewhere.io/schema/sitewhere/microservice/common/connector"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://sitewhere.io/schema/sitewhere/microservice/instance-management"
	elementFormDefault="qualified" attributeFormDefault="unqualified">

	<xsd:import
		namespace="http://sitewhere.io/schema/sitewhere/microservice/common/datastore"
		schemaLocation="http://sitewhere.io/schema/sitewhere/microservice/common/current/datastore-common.xsd" />
	<xsd:import
		namespace="http://sitewhere.io/schema/sitewhere/microservice/common/connector"
		schemaLocation="http://sitewhere.io/schema/sitewhere/microservice/common/current/connector-common.xsd" />

	<xsd:element name="instance-management"
		type="instanceManagementType">
		<xsd:annotation>
			<xsd:documentation>
				Provides global instance management configuration
				data.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

	<!-- Top-level instance management elements -->
	<xsd:complexType name="instanceManagementType">
		<xsd:all>
			<xsd:element name="persistence-configurations"
				type="persistenceConfigurationsType">
				<xsd:annotation>
					<xsd:documentation>
						Captures reusable configuration information that
						can be used by tenants to access common datastores.
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="connector-configurations"
				type="connectorConfigurationsType">
				<xsd:annotation>
					<xsd:documentation>
						Captures reusable configuration information that
						can be used by tenants to connect to external systems.
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:all>
	</xsd:complexType>

	<!-- Persistence configurations -->
	<xsd:complexType name="persistenceConfigurationsType">
		<xsd:sequence>
			<xsd:element ref="abstract-persistence-configuration"
				minOccurs="0" maxOccurs="unbounded">
				<xsd:annotation>
					<xsd:documentation>
						Provides global datastore configuration.
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<!-- Used as a placeholder for datastore configurations to allow substitutionGroups -->
	<xsd:element name="abstract-persistence-configuration"
		abstract="true" type="abstractPersistenceConfigurationType">
		<xsd:annotation>
			<xsd:documentation>
				A placeholder for persistence configuration
				elements.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

	<!-- Common datastore configuration information -->
	<xsd:complexType
		name="abstractPersistenceConfigurationType">
	</xsd:complexType>

	<!-- MongoDB persistence configuration elements -->
	<xsd:element name="mongodb-configurations"
		type="mongoConfigurationsType"
		substitutionGroup="abstract-persistence-configuration">
		<xsd:annotation>
			<xsd:documentation>
				Provides global configuration for MongoDB that can
				be referenced by microservices.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:complexType name="mongoConfigurationsType">
		<xsd:complexContent>
			<xsd:extension
				base="abstractPersistenceConfigurationType">
				<xsd:sequence>
					<xsd:element name="mongodb-configuration"
						type="mongoDatastoreConfigurationType" minOccurs="0"
						maxOccurs="unbounded">
						<xsd:annotation>
							<xsd:documentation>
								Configuration data for MongoDB datastores.
							</xsd:documentation>
						</xsd:annotation>
					</xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<!-- Alternate MongoDB datastore configuration -->
	<xsd:complexType name="mongoDatastoreConfigurationType">
		<xsd:attribute name="id" type="xsd:string"
			use="required">
			<xsd:annotation>
				<xsd:documentation>
					Unique id for datastore configuration.
				</xsd:documentation>
			</xsd:annotation>
		</xsd:attribute>
		<xsd:attributeGroup ref="ds:mongo-attributes" />
	</xsd:complexType>

	<!-- InfluxDB persistence configuration elements -->
	<xsd:element name="influxdb-configurations"
		type="influxConfigurationsType"
		substitutionGroup="abstract-persistence-configuration">
		<xsd:annotation>
			<xsd:documentation>
				Provides global configuration for InfluxDB that
				can be referenced by microservices.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:complexType name="influxConfigurationsType">
		<xsd:complexContent>
			<xsd:extension
				base="abstractPersistenceConfigurationType">
				<xsd:sequence>
					<xsd:element name="influxdb-configuration"
						type="influxDatastoreConfigurationType" minOccurs="0"
						maxOccurs="unbounded">
						<xsd:annotation>
							<xsd:documentation>
								Configuration data for MongoDB datastores.
							</xsd:documentation>
						</xsd:annotation>
					</xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<!-- InfluxDB datastore configuration -->
	<xsd:complexType
		name="influxDatastoreConfigurationType">
		<xsd:attribute name="id" type="xsd:string"
			use="required">
			<xsd:annotation>
				<xsd:documentation>
					Unique id for datastore configuration.
				</xsd:documentation>
			</xsd:annotation>
		</xsd:attribute>
		<xsd:attributeGroup ref="ds:influx-attributes" />
	</xsd:complexType>

	<!-- Apache Cassandra persistence configuration elements -->
	<xsd:element name="cassandra-configurations"
		type="cassandraConfigurationsType"
		substitutionGroup="abstract-persistence-configuration">
		<xsd:annotation>
			<xsd:documentation>
				Provides global configuration for Apache Cassandra
				that can be referenced by microservices.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:complexType name="cassandraConfigurationsType">
		<xsd:complexContent>
			<xsd:extension
				base="abstractPersistenceConfigurationType">
				<xsd:sequence>
					<xsd:element name="cassandra-configuration"
						type="cassandraDatastoreConfigurationType" minOccurs="0"
						maxOccurs="unbounded">
						<xsd:annotation>
							<xsd:documentation>
								Configuration data for Apache Cassandra
								datastores.
							</xsd:documentation>
						</xsd:annotation>
					</xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<!-- Apache Cassandra datastore configuration -->
	<xsd:complexType
		name="cassandraDatastoreConfigurationType">
		<xsd:attribute name="id" type="xsd:string"
			use="required">
			<xsd:annotation>
				<xsd:documentation>
					Unique id for datastore configuration.
				</xsd:documentation>
			</xsd:annotation>
		</xsd:attribute>
		<xsd:attributeGroup ref="ds:cassandra-attributes" />
	</xsd:complexType>

	<!-- Connector configurations -->
	<xsd:complexType name="connectorConfigurationsType">
		<xsd:sequence>
			<xsd:element ref="abstract-connector-configuration"
				minOccurs="0" maxOccurs="unbounded">
				<xsd:annotation>
					<xsd:documentation>
						Provides global oubound connector configuration.
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<!-- Used as a placeholder for connector configurations to allow substitutionGroups -->
	<xsd:element name="abstract-connector-configuration"
		abstract="true" type="abstractConnectorConfigurationType">
		<xsd:annotation>
			<xsd:documentation>
				A placeholder for outbound connector configuration
				elements.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

	<!-- Common connector configuration information -->
	<xsd:complexType
		name="abstractConnectorConfigurationType">
	</xsd:complexType>

	<!-- List of configurations for Solr connectors -->
	<xsd:element name="solr-configurations"
		type="solrConfigurationsType"
		substitutionGroup="abstract-connector-configuration">
		<xsd:annotation>
			<xsd:documentation>Global configuration settings for Apache Solr.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:complexType name="solrConfigurationsType">
		<xsd:complexContent>
			<xsd:extension
				base="abstractConnectorConfigurationType">
				<xsd:sequence>
					<xsd:element name="solr-configuration"
						type="solrConfigurationType" minOccurs="0">
						<xsd:annotation>
							<xsd:documentation>
								Configuration settings for Apache Solr
								connectors.
							</xsd:documentation>
						</xsd:annotation>
					</xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<!-- Configuration for Solr connector -->
	<xsd:complexType name="solrConfigurationType">
		<xsd:attribute name="id" type="xsd:string"
			use="required">
			<xsd:annotation>
				<xsd:documentation>
					Unique id for Solr configuration.
				</xsd:documentation>
			</xsd:annotation>
		</xsd:attribute>
		<xsd:attributeGroup ref="cn:solr-attributes" />
	</xsd:complexType>
</xsd:schema>